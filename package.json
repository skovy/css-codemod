{
  "version": "0.0.0-dripip",
  "license": "MIT",
  "name": "css-codemod",
  "author": "Spencer Miskoviak",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12"
  },
  "bin": {
    "css-codemod": "./dist/cli.js"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "yarn clean && tsup src/index.ts src/cli.ts",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "yarn build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "clean": "rimraf dist"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/css-codemod.esm.js",
  "size-limit": [
    {
      "path": "dist/css-codemod.cjs.production.min.js",
      "limit": "100 KB"
    },
    {
      "path": "dist/css-codemod.esm.js",
      "limit": "100 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.5",
    "dripip": "^0.10.0",
    "husky": "^7.0.4",
    "rimraf": "^3.0.2",
    "size-limit": "^7.0.5",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "tsup": "^5.11.11",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "postcss": "^8.4.5"
  }
}
